{
  "name": "i18n-lint-cli",
  "version": "0.1.5",
  "description": "CLI tool to lint i18n translation files",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "i18n-lint": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup src --format cjs --dts",
    "dev": "tsup src --format cjs --dts --watch",
    "test": "vitest run"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "yaml": "^2.3.2"
  },
  "devDependencies": {
    "tsup": "^7.2.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0",
    "@types/node": "^20.0.0"
  },
  "keywords": [
    "i18n",
    "lint",
    "translations",
    "cli"
  ],
  "license": "MIT"
}
